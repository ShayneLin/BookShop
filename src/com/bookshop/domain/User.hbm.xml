<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.bookshop.domain.User" table="T_User">
		<id name="uid">
			<column name="uid"></column>
			<!--主键生成策略 -->
			<generator class="uuid"></generator>
		</id>
		<property name="loginname" column="loginname"></property>
		<property name="loginpass" column="loginpass"></property>
		<property name="email" column="email"></property>
		<property name="status" column="status"></property>
		<property name="activationCode" column="activationCode"></property>
	</class>

</hibernate-mapping>

